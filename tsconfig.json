{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules", "dist", "lib"],
  "types": [
    "mocha",
    "node"
  ]
}
